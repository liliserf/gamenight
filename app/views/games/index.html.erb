<h2>My Games</h2>
<table style="width: 100%">
  <thead>
    <tr>
      <th align="left">Game</th>
      <th align="left">Min Players</th>
      <th align="left">Max Players</th>
      <th align="left">Available to Borrow?</th>
      <th align="left">Owner</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% unless @games.empty? %>
      <% @games.each do |game| %>
        <tr>
          <td><%= link_to game.name, game.url %></td>
          <td><%= game.min_players %></td>
          <td><%= game.max_players %></td>
          <% if game.available %>
            <td>Yes</td>
          <% else %>
            <td>No</td>
          <% end %>
          <% if game.user.name %>
            <td><%= game.user.name %></td>
          <% else %>
            <td><%= game.user.email %></td>
          <% end %>
          <td><%= link_to "Edit Game", edit_game_path(game)%></td>
          <td><%= link_to 'Delete Game', game, method: :delete %></td>
        </tr>
      <% end %>
    <% else %>
      <tr><td><%= link_to "Add Game", new_game_path %></td></tr>
    <% end %>
  </tbody>
</table>